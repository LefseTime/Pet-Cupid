<main>
  <div class="parallax-container">
    <div class="parallax">
      <img src="images/save.png" alt="cat and dog snuggling">
    </div>
  </div>

<div class="section white saved-section">
    <div class="row container center">
        <div class="row container center">     
        <h3>My Pets</h3>
        <p>Please sign in to access your saved pets.</p>
        <section id=“reload”>
    <section id="reload">
  <div class="container">
  <input id="reloadBtn" class="waves-effect waves-light btn-large" type="submit" value="Click to See your Saved Pets" onClick="window.location.reload()">
</div>
</section>
          {{#each saved}}
            <div class="col s12">
                <div class="card horizontal">
                    <div class="card-image waves-effect waves-block waves-light">
                        <img class= "activator" src="{{largePhoto}}">
                    </div>

                    <div class="card-content">
                        <span class="card-title activator grey-text text-darken-4">{{name}}</span>
                        <p><a target="_blank" href="{{url}}">PetFinder Url</a></p>
                    </div>

                    <div class="card-reveal">
                        <span class="card-title grey-text text-darken-4">{{name}}<i class="material-icons right">close</i></span>
                        <p>{{about}}</p>                    
                    </div>
                </div>
            </div>
             {{/each}}
        </div>
    </div>
</div>
</main>

